<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andrey.wooppaymessenger">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.register_activity.CreateAccountActivity" />
        <activity android:name=".activity.register_activity.ActivateAccountActivity" />
        <activity android:name=".activity.register_activity.SetPasswordActivity" />
        <activity android:name=".activity.AuthActivity" />
        <activity android:name=".activity.StartPageActivity" />
    </application>

</manifest>